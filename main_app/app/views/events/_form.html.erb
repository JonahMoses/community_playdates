<div id='create-playdate-form' >
  <%= form_for(@event) do |f| %>
    <%= render "shared/errors", object: @event %>
    <%= render "shared/errors", object: @location %>

    <fieldset>
      <ol>
        <li>
          <%= f.label :playdate_name %>
          <%= f.text_field :name, autofocus: true %>
        </li>
        <li>
          <%= f.label :description %>
          <%= f.text_area :description, cols: 40, rows: 7 %>
        </li>

        <%= fields_for :location, @location do |k| %>
          <li>
            <%= k.label :location_name %>
            <%= k.text_field :venue, size: 30, id:'venue-name' %>
          </li>

          <li>
            <%= k.label :street_address %>
            <%= k.text_field :street_address, size: 30, id:'street-address' %>
          </li>

          <li>
            <%= k.label :city %>
            <%= k.text_field :city, size: 30, id:'event-city' %>
          </li>

          <li>
            <%= k.label :state%>
            <%= k.text_field :state, size: 2, id:'event-state' %>
          </li>

          <li>
            <%= k.label :zipcode %>
            <%= k.text_field :zipcode, size: 10, id:'event-zipcode' %>
          </li>
        <% end %>

        <li>
          <%= f.label :date %>
          <%= f.text_field :date, id: 'datepicker', value: Date.today %>
        </li>

        <li>
          <%= f.label :start_time %>
          <%= f.text_field :start_time, id: 'start'  %>
        </li>

        <li>
          <%= f.label :end_time %>
          <%= f.text_field :end_time, id: 'end'  %>
        </li>
        </ol>
        <p>
          <%= f.submit 'Submit Playdate' %>
          <%= link_to "Cancel", events_path, class: 'button' %>
        </p>
      </fieldset>
    <% end %>
</div>


<header id="playdate-community-header">
  <h2>Playdate Community Members</h2>
</header>

<div class='friend-portal col-lg-12'>
  <div class='community friends'>
    <h2>Friends</h2>
    <% if @friends.empty? %>
      <h4><em>There are no friends currently enrolled.</em></h4>
    <% else %>
      <%= render partial: "users/user", collection: @friends %>
    <% end %>
  </div>

  <br/>
  <legend style='margin-left: 400%'></legend>
  <br/>

  <div class='community friends-of-friends'>
    <h2>Friends of Friends</h2>
    <% if @friends_of_friends.empty? %>
      <h4><em>There are no friends of friends currently enrolled.</em></h4>
    <% else %>
      <%= render partial: "users/user", collection: @friends_of_friends %>
    <% end %>
  </div>

  <br/>
  <legend  style='margin-left: 400%'></legend>
  <br/>

  <div class='community public'>
    <% unless @general_public.empty? %>
      <h2>Others in the Community</h2>
      <%= render partial: "users/user", collection: @general_public %>
    <% end %>
  </div>
</div>

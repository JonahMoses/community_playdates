<div class="col-lg-3 well">

  <h2><%= user.name %></h2></br>

  <div class= "profile-image">
    <%= image_tag user.large_avatar, :height => '150', :width => '150'  %>
  </div>

  <div>
    <div class='span3'>
      <h5><strong>Joined on: </strong><%= user.created_at.strftime("%m/%d/%Y") %></h5>
      <h4>Playdates:</h4>
      <h5><strong>Created: </strong><%= user.created_events.count %></h5>
      <h5><strong>Attending: </strong><%= user.attending_events.count %></h5>
    </div>
    <%= link_to "View Profile", user_path(user.id) %>
  </div>

</div>
